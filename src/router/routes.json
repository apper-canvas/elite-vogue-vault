{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/category/:category": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Category pages are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/product/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Product details are public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/cart": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Cart is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/wishlist": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Wishlist is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/reset-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Reset password is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/prompt-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Prompt password is public",
            "rule": "public"
          }
        ]
      },
      "excludeRedirectQuery": true
    }
  },
  "/checkout": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to checkout",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/account": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view account",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/orders": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view orders",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/profile": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view profile",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}